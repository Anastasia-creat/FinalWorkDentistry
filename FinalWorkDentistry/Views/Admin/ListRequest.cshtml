@model IEnumerable<FinalWorkDentistry.Models.RequestModel>

@{
    ViewData["Title"] = "Запросы";
}

<h1>Список оставленных заявок</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Symptoms)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Symptoms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>

                    <a asp-action="DeleteRequest"
                       asp-controller="Admin"
                       asp-route-id="@item.RequestId"
                      
                       class="btn" style="margin-top:5px;">
                        Удалить
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
