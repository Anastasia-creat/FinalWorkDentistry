@using Microsoft.AspNetCore.Identity
@using FinalWorkDentistry.UsersRoles
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{ 
        <a  class="navbar-brand text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"></a>
 
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("IndexMain", "Blazor", new { area = "" })">
            <button  type="submit" class=" btn">Выйти</button>
        </form>
}
else
{
            <a class="btn"  asp-area="Identity" asp-page="/Account/Login">Войти</a>
 
}

