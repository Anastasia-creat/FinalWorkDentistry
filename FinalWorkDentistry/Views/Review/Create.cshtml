@model FinalWorkDentistry.Models.ReviewsModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="container_form-review" id="reviews">
 

    <div class="form-container">
        <!-- Форма для отправки отзыва -->
        <h2>Оставьте свой отзыв</h2>
        <form id="review-form">
            <label class="marg" for="phone">Телефон:</label><br>
            <input type="tel" id="phone" name="phone" required><br>
            <label class="marg" for="name">Введите ваше имя:</label><br>
            <input type="text" id="name" name="name" required><br>
            <label class="marg" for="message">Текст отзыва:</label><br>
            <textarea id="message" name="message" required></textarea><br>
            <button class="marg btn" type="submit">Отправить отзыв</button>
        </form>
    </div>
</div>





