@model FinalWorkDentistry.Domains.CategoryService

@{
    ViewData["Title"] = "Редактирование категорий";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>


<div class="row" style="margin-top: 30px;">
    <div class="col-md-4">
        <form asp-action="EditCategoryService">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  asp-for="CategoryServiceId" class="control-label"></label>
                <input readonly asp-for="CategoryServiceId" class="form-control" />
                <span asp-validation-for="CategoryServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Service"
       asp-action="ListView">Назад в каталог</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
