@model FinalWorkDentistry.Domains.CategoryDoctor

@{
    ViewData["Title"] = "Редактирование категорий";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategoryDoctor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryDoctorId" class="control-label"></label>
                <input readonly asp-for="CategoryDoctorId" class="form-control" />
                <span asp-validation-for="CategoryDoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="button_save btn" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Doctor"
       asp-action="ListView">Назад в каталог</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
