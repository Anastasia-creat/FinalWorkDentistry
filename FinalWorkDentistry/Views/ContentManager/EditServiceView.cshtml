@model FinalWorkDentistry.Models.EditServicesModel

@{
    ViewData["Title"] = "Добавление/редактирование услуги";
}

<style>
    .form-wrapper {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        color: #6F8AA4; /* Цвет текста */
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control, .btn {
        border-radius: 5px;
    }

    .btn {
        background-color: #6F8AA4;
        color: white;
        padding: 10px 20px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #536D86;
        }

    label {
        margin-bottom: 5px;
        font-weight: bold;
        color: #6F8AA4; /* Цвет текста */
    }

    .text-danger {
        color: #dc3545;
    }
</style>

<h4>@ViewData["Title"]</h4>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-wrapper">
                <form asp-action="EditServiceView">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" name="urlReturn" value="@Model.UrlReturn" />
                        <label asp-for="SelectedCategoryId" class="control-label"></label>
                        <select asp-for="SelectedCategoryId" asp-items="@Model.ListCategories" class="form-control">
                            <option>@Model.CategoryService</option>
                        </select>
                    </div>
                    <div class="form-group" style="display:none;">
                        <label asp-for="ServiceId" class="control-label"></label>
                        <input asp-for="ServiceId" class="form-control" />
                        <span asp-validation-for="ServiceId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Сохранить" class="btn btn-block" />
                    </div>
                </form>

                <div class="form-group">
                    <a asp-action="ListView" asp-controller="Service" class="btn btn-block">Вернуться к списку услуг</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
